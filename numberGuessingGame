<body>

<div class="game">
  <h2>Guess the Number</h2>
  <p>Guess a number between 1 and 100</p>

  <input type="number" id="guess">
  <br>
  <button onclick="check()">Guess</button>
  <button onclick="restart()">Restart</button>

  <div class="msg" id="msg"></div>
  <div class="msg" id="tries"></div>
</div>

<script>
  let secret = Math.floor(Math.random() * 100) + 1;
  let attempts = 0;

  function check() {
    const input = document.getElementById("guess");
    const value = Number(input.value);
    const msg = document.getElementById("msg");

    if (!value) {
      msg.textContent = "Enter a number!";
      return;
    }

    attempts++;

    if (value === secret) {
      msg.textContent = "ðŸŽ‰ Correct! You won!";
    } else if (value > secret) {
      msg.textContent = "ðŸ“‰ Too high!";
    } else {
      msg.textContent = "ðŸ“ˆ Too low!";
    }

    document.getElementById("tries").textContent =
      "Attempts: " + attempts;
  }

  function restart() {
    secret = Math.floor(Math.random() * 100) + 1;
    attempts = 0;
    document.getElementById("msg").textContent = "";
    document.getElementById("tries").textContent = "";
    document.getElementById("guess").value = "";
  }
</script>

</body>
</html>
