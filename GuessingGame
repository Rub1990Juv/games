<div class="game">
  <h2>Guess the Number üéØ</h2>
  <p>I'm thinking of a number between 1 and 100</p>

  <input type="number" id="guess" placeholder="Enter number">
  <button onclick="check()">Check</button>

  <p id="message"></p>
</div>

<script>
  let secret = Math.floor(Math.random() * 100) + 1;
  let attempts = 0;

  function check() {
    let guess = Number(document.getElementById("guess").value);
    let msg = document.getElementById("message");

    if (!guess || guess < 1 || guess > 100) {
      msg.textContent = "Enter a number from 1 to 100 ‚ùó";
      return;
    }

    attempts++;

    if (guess === secret) {
      msg.textContent = `Correct üéâ Attempts: ${attempts}`;
    } else if (guess > secret) {
      msg.textContent = "Too high ‚¨áÔ∏è";
    } else {
      msg.textContent = "Too low ‚¨ÜÔ∏è";
    }
  }
</script>

