#Click Speed Game
<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Click Speed Game</title>
<style>
  body {
    font-family: Arial, sans-serif;
    background: #111;
    color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
  }

  .game {
    background: #222;
    padding: 30px;
    border-radius: 10px;
    text-align: center;
    width: 300px;
  }

  button {
    padding: 15px 30px;
    font-size: 18px;
    cursor: pointer;
    margin-top: 15px;
  }

  .score {
    font-size: 24px;
    margin: 10px 0;
  }
</style>
</head>
<body>

<div class="game">
  <h2>Click Speed Game</h2>
  <p>Click as fast as you can in 10 seconds!</p>

  <div class="score" id="score">0</div>
  <button id="btn">CLICK</button>
  <p id="time">Time: 10</p>
</div>

<script>
  let score = 0;
  let time = 10;
  let started = false;

  const scoreEl = document.getElementById("score");
  const timeEl = document.getElementById("time");
  const btn = document.getElementById("btn");

  btn.onclick = () => {
    if (!started) {
      started = true;
      startTimer();
    }

    if (time > 0) {
      score++;
      scoreEl.innerText = score;
    }
  };

  function startTimer() {
    let timer = setInterval(() => {
      time--;
      timeEl.innerText = "Time: " + time;

      if (time === 0) {
        clearInterval(timer);
        btn.disabled = true;
        timeEl.innerText = "Game Over!";
      }
    }, 1000);
  }
</script>

</body>
</html>
