<style>
  body {
    font-family: Arial, sans-serif;
    text-align: center;
    background: #f4f4f4;
    margin: 0;
    padding: 20px;
  }

  h1 {
    margin-bottom: 5px;
  }

  #gameArea {
    width: 400px;
    height: 400px;
    margin: 20px auto;
    border: 2px solid #333;
    background: #fff;
    position: relative;
  }

  #box {
    width: 40px;
    height: 40px;
    background: crimson;
    position: absolute;
    cursor: pointer;
    border-radius: 6px;
  }
</style>
